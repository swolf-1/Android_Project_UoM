<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".StoryActivity">

    <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/twitter"
            android:id="@+id/imageView3"
            android:layout_marginEnd="107dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="@+id/imageView4"
            app:layout_constraintBottom_toBottomOf="@+id/imageView4"
            app:layout_constraintStart_toEndOf="@+id/imageView4"/>
    <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/insta"
            android:id="@+id/imageView4"
            android:layout_marginStart="45dp"
            app:layout_constraintStart_toEndOf="@+id/imageView5" app:layout_constraintEnd_toStartOf="@+id/imageView3"
            android:layout_marginEnd="45dp" app:layout_constraintTop_toBottomOf="@+id/select_photo_button"
            android:layout_marginTop="32dp" app:layout_constraintBottom_toTopOf="@+id/ig_checkBox"/>
    <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/facebook"
            android:id="@+id/imageView5"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="107dp" app:layout_constraintTop_toTopOf="@+id/imageView4"
            app:layout_constraintBottom_toBottomOf="@+id/imageView4"
            app:layout_constraintEnd_toStartOf="@+id/imageView4"/>
    <ImageView
            android:layout_width="355dp"
            android:layout_height="357dp" tools:srcCompat="@android:drawable/ic_menu_gallery"
            android:id="@+id/storyImage"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="19dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/select_photo_button"/>
    <Button
            android:text="Select Photo from Your Gallery"
            android:layout_width="300dp"
            android:layout_height="50dp" android:id="@+id/select_photo_button"
            app:layout_constraintEnd_toEndOf="@+id/storyImage" app:layout_constraintStart_toStartOf="@+id/storyImage"
            app:layout_constraintTop_toBottomOf="@+id/storyImage"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toTopOf="@+id/imageView3"
            app:layout_constraintHorizontal_bias="0.49" app:layout_constraintVertical_bias="1.0"/>
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/fb_checkBox"
            app:layout_constraintTop_toTopOf="@+id/ig_checkBox" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="109dp" app:layout_constraintEnd_toStartOf="@+id/ig_checkBox"
            app:layout_constraintBottom_toBottomOf="@+id/ig_checkBox"/>
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/ig_checkBox"
            app:layout_constraintEnd_toStartOf="@+id/twitter_checkBox" android:layout_marginEnd="49dp"
            android:layout_marginStart="48dp" app:layout_constraintStart_toEndOf="@+id/fb_checkBox"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" android:layout_marginBottom="86dp"
            app:layout_constraintBottom_toTopOf="@+id/post_button"/>
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/twitter_checkBox"
            app:layout_constraintTop_toTopOf="@+id/ig_checkBox" android:layout_marginEnd="109dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ig_checkBox"
            app:layout_constraintBottom_toBottomOf="@+id/ig_checkBox"/>
    <Button
            android:text="Post the Story"
            android:layout_width="300dp"
            android:layout_height="50dp" android:id="@+id/post_button"
            android:layout_marginTop="86dp" app:layout_constraintTop_toBottomOf="@+id/fb_checkBox"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="70dp" android:background="#FF0000"/>
</androidx.constraintlayout.widget.ConstraintLayout>