<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/home_bg"
        tools:context=".MainActivity">
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp" app:srcCompat="@drawable/untitled_2" android:id="@+id/imageView4"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="24dp" app:layout_constraintBottom_toTopOf="@+id/twitterTrendsBtn"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.49"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/button_explore_trends"
            android:id="@+id/twitterTrendsBtn"
            android:background="#00FFFFFF"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/CreatePostbtn"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/button_create_post"
            android:id="@+id/CreatePostbtn"
            android:background="#00FFFFFF"
            app:layout_constraintEnd_toEndOf="@+id/twitterTrendsBtn"
            app:layout_constraintStart_toStartOf="@+id/twitterTrendsBtn"
            app:layout_constraintTop_toBottomOf="@+id/twitterTrendsBtn" android:layout_marginTop="16dp"
            android:layout_marginBottom="5dp" app:layout_constraintBottom_toTopOf="@+id/login_button"/>

    <com.facebook.login.widget.LoginButton
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/CreatePostbtn"
            app:layout_constraintEnd_toEndOf="@+id/CreatePostbtn"
            app:layout_constraintStart_toStartOf="@+id/CreatePostbtn" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="144dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>