<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/home_bg"
        tools:context=".MainActivity">
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/button_explore_trends"
            android:id="@+id/twitterTrendsBtn"
            android:background="#00FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/CreatePostbtn" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/button_create_post"
            android:id="@+id/CreatePostbtn"
            android:background="#00FFFFFF"
            app:layout_constraintEnd_toEndOf="@+id/twitterTrendsBtn"
            app:layout_constraintStart_toStartOf="@+id/twitterTrendsBtn"
            app:layout_constraintTop_toBottomOf="@+id/twitterTrendsBtn"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="24dp"
    />

</androidx.constraintlayout.widget.ConstraintLayout>