<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/home_bg"
        tools:context=".MainActivity">
    <Button
            android:text="Creat Story"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/CreateStroyButton"
            android:background="#000000"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="265dp" android:layout_marginEnd="160dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="159dp" android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/CreatePostbtn"/>
    <Button
            android:text="Trends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/twitterTrendsBtn"
            android:background="#000000"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="215dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="164dp"
            android:layout_marginEnd="159dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="47dp" app:layout_constraintBottom_toTopOf="@+id/CreatePostbtn"/>
    <Button
            android:text="Create Post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/CreatePostbtn"
            android:background="#000000"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="60dp" app:layout_constraintBottom_toTopOf="@+id/CreateStroyButton"
            android:layout_marginEnd="159dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="160dp"
            android:layout_marginTop="47dp" app:layout_constraintTop_toBottomOf="@+id/twitterTrendsBtn"/>

</androidx.constraintlayout.widget.ConstraintLayout>