<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/home_bg"
        tools:context=".Trends_Activity">


    <SearchView
            android:id="@+id/searchView"
            android:layout_height="wrap_content"
            android:queryHint="Search Here"
            android:iconifiedByDefault="false"
            android:layout_alignParentTop="true"
            android:background="#E5BEEC" android:layout_width="wrap_content"
            android:visibility="visible" tools:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <ListView
            android:padding="20dp"
            android:layout_width="406dp"
            android:layout_height="464dp"
            android:backgroundTint="#FFFFFF"
            android:id="@+id/trendsList"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintBottom_toTopOf="@+id/searchView" app:layout_constraintVertical_bias="0.01999998">

    </ListView>
    <TextView
            android:layout_width="283dp"
            android:layout_height="145dp" android:id="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/trendsList"
            app:layout_constraintBottom_toTopOf="@+id/searchView"/>


</androidx.constraintlayout.widget.ConstraintLayout>